<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="sylius.consumer.salesforce" class="Swisscat\SalesforceBundle\Consumer\SalesforcePublisherConsumer">
            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument type="service" id="salesforce.mapper.config" />
            <argument type="service" id="logger" />
            <argument type="service">
                <service class="Swisscat\SalesforceBundle\Mapper\BulkSaver">
                    <argument type="service" id="salesforce.soap_client" />
                </service>
            </argument>
        </service>
        <service id="sylius.consumer.salesforce_back" class="Swisscat\SalesforceBundle\Consumer\SalesforceBack">
            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument type="service" id="logger" />
        </service>

        <service id="salesforce.mapper.config" class="Swisscat\SalesforceBundle\Mapper\ConfigurationProvider">
            <!--<argument>%salesforce.mapper.config%</argument>-->
        </service>

        <service id="sylius.mapper.to_salesforce" class="Swisscat\SalesforceBundle\Mapper\Mapper">
            <argument type="service">
                <service class="Swisscat\SalesforceBundle\Mapper\Driver\XmlDriver" />
            </argument>
            <argument type="service" id="salesforce.mapper.config" />
        </service>

        <service id="sylius.listener.salesforce_sync" class="Swisscat\SalesforceBundle\Listener\SalesforceListener">
            <argument type="service" id="old_sound_rabbit_mq.sync_salesforce_producer" />
            <argument type="service" id="sylius.mapper.to_salesforce" />
            <tag name="kernel.event_listener" event="sylius.customer.post_register" method="addContact" />
            <tag name="kernel.event_listener" event="sylius.customer.pre_update" method="updateContact" />
        </service>
    </services>
</container>
