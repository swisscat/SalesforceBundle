<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="sylius.consumer.salesforce" class="Swisscat\SalesforceBundle\Consumer\SalesforcePublisherConsumer">
            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument type="service" id="salesforce.mapping.driver" />
            <argument type="service" id="logger" />
            <argument type="service">
                <service class="Swisscat\SalesforceBundle\Mapping\BulkSaver">
                    <argument type="service" id="salesforce.soap_client" />
                </service>
            </argument>
        </service>
        <service id="sylius.consumer.salesforce_back" class="Swisscat\SalesforceBundle\Consumer\SalesforceBack">
            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument type="service" id="logger" />
        </service>

        <service id="sylius.mapper.to_salesforce" class="Swisscat\SalesforceBundle\Mapping\Mapper">
            <argument type="service">
                <service class="Swisscat\SalesforceBundle\Mapping\Driver\XmlDriver" />
            </argument>
        </service>

        <service id="salesforce.mapping.driver" class="Swisscat\SalesforceBundle\Mapping\Driver\XmlDriver" />

        <service id="salesforce.producer" class="Swisscat\SalesforceBundle\Producer\AmqpProducer">
            <argument type="service">
                <service class="Swisscat\SalesforceBundle\Mapping\Mapper">
                    <argument type="service" id="salesforce.mapping.driver" />
                </service>
            </argument>
        </service>

        <service id="sylius.listener.salesforce_sync" class="Swisscat\SalesforceBundle\Listener\SalesforceListener">
            <argument type="service" id="salesforce.producer" />
            <tag name="kernel.event_listener" event="sylius.customer.post_register" method="publishEventSubject" />
            <tag name="kernel.event_listener" event="sylius.customer.pre_update" method="publishEventSubject" />
        </service>
    </services>
</container>
